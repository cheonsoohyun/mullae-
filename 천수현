<script>
function calculate() {
    const mid = parseFloat(document.getElementById("mid").value);
    const performance = parseFloat(document.getElementById("performance").value);
    const goal = document.getElementById("goal").value;

    if (isNaN(mid) || isNaN(performance)) {
        document.getElementById("result").innerHTML = "âš ï¸ ì ìˆ˜ë¥¼ ì •í™•íˆ ì…ë ¥í•˜ì„¸ìš”!";
        return;
    }

    const x = mid * 0.3;
    const y = performance;
    
    const target = (goal === "A") ? 90 : 80;
    const needed_final = (target - (x + y)) / 0.3;

    let message = "===== ê²°ê³¼ =====<br>";

    if (needed_final <= 0) {
        message += `ì´ë¯¸ ${goal} ë‹¬ì„± ê°€ëŠ¥í•©ë‹ˆë‹¤! ğŸ‰`;
    } else if (needed_final > 100) {
        message += `ê¸°ë§ì— 100ì ì„ ë§ì•„ë„ ${goal} ë‹¬ì„± ì–´ë ¤ì›Œìš” ğŸ˜¢`;
    } else {
        message += `${goal} ëª©í‘œ ìœ„í•´<br>ê¸°ë§ ìµœì†Œ <b>${needed_final.toFixed(1)}ì </b> í•„ìš”í•©ë‹ˆë‹¤!`;
    }

    document.getElementById("result").innerHTML = message;
}
